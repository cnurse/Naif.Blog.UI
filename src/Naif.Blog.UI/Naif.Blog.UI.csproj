<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <ProductVersion>2.2.0</ProductVersion>
    <FileVersion>2.2.0.2</FileVersion>
    <NuspecFile>$(MSBuildProjectName).nuspec</NuspecFile>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Naif.Blog.Core" Version="3.0.0-beta.1" />
    <PackageReference Include="Naif.Blog.Razor" Version="1.1.0-beta.1" />
    <PackageReference Include="Naif.Core" Version="3.2.0-alpha.1" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Views\Shared\Components\Page\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Page\ViewPage.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\Menu\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\Copyright\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\RecentPosts\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\UserProfile\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\Post\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Profile\Index.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Security\Index.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\ClientDependency\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\GoogleAnalytics\Default.cshtml" />
    <_ContentIncludedByDefault Remove="Views\Shared\Components\Head\Default.cshtml" />
  </ItemGroup>

</Project>
