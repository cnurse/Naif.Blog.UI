@model Naif.Blog.UI.ViewModels.BlogViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_AdminLayout";
}


<h2>Edit Post</h2>
<form asp-controller="Post" method="post">
    <input asp-for="Post.PostId" class="form-control" type="hidden">
    <div class="form-group">
        <label asp-for="Post.Title"></label>
        <input asp-for="Post.Title" class="form-control" placeholder="Title">
        <span asp-validation-for="Post.Title" class="invalid-feedback"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Content"></label>
        <textarea asp-for="Post.Content" class="form-control" placeholder="Content" rows="15" id="content-editor"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Post.Excerpt"></label>
        <textarea asp-for="Post.Excerpt" class="form-control" placeholder="Content" rows="3" id="excerpt-editor"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Post.Categories"></label>
        <div>
            <select asp-for="Post.Categories" asp-items="Model.Categories" class="selectpicker"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Post.Tags"></label>
        <input type="text" asp-for="Post.Keywords" data-role="tagsinput">
    </div>
    <div class="form-group form-check">
        <input asp-for="Post.IsPublished" class="form-check-input" type="checkbox">
        <label asp-for="Post.IsPublished" class="form-check-label">Is Published?</label>
    </div>
    <script type="text/javascript">
        CKEDITOR.replace('content-editor');
        CKEDITOR.replace('excerpt-editor');
    </script>
    <button type="submit" class="btn btn-primary" asp-action="SavePost" asp-route-returnUrl="@ViewBag.ReturnUrl">Submit</button>
    <button type="cancel" class="btn btn-default" formnovalidate asp-action="Cancel" asp-route-returnUrl="@ViewBag.ReturnUrl">Cancel</button>
</form>